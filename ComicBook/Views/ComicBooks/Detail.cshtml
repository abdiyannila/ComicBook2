<body>


    <div>
        <h2>@Model.SeriesTitle : @Model.IssueNumber </h2>

        <div class="row">
            <div class="col-md-6">
                <div class="well">
                    <h5><label>Series Title:</label> @Model.SeriesTitle</h5>
                    <h5><label>Issue :</label> @Model.IssueNumber</h5>
                    <h5><label>Favorite:</label> Yes</h5>
                    <h5>Artists:</h5>
                    <div>
                        <ul>
                            @foreach (var artist in Model.Artists)
                            {
                                <li>@artist.Role : @artist.Name</li>
                            }
                        </ul>
                    </div>
                </div>

                <h5>Description</h5>
                @Html.Raw(Model.Description)
            </div>

            <div class="col-md-6">
                <img src="/Images/@Model.getCoverImageName"
                     alt= "@Model.DisplayText" class="img-responsive" />
            </div>
        </div>
    </div>
</body>
